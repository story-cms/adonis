{
  "name": "@story-cms/adonis",
  "version": "0.6.3",
  "description": "StoryCMS package for the Adonisjs framework",
  "keywords": [
    "StoryCMS",
    "AdonisJS"
  ],
  "main": "./build/providers/StoryProvider.js",
  "typings": "./build/adonis-typings/index.d.ts",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/src",
    "build/instructions.js",
    "build/templates"
  ],
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "types": "@story-cms/adonis",
    "providers": [
      "@story-cms/adonis"
    ]
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint . --ext=ts",
    "lint:fix": "eslint . --ext=ts --fix",
    "copy:instructions_md": "copyfiles \"instructions.md\" build",
    "copy:files": "copyfiles \"templates/**/*.txt\" build && npm run copy:instructions_md",
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node -r @adonisjs/require-ts/build/register bin/test.ts",
    "clean": "del-cli build",
    "compile": "npm run clean && tsc && npm run copy:files",
    "build": "npm run compile",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/story-cms/adonis.git"
  },
  "author": "Story CMS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/story-cms/adonis/issues"
  },
  "homepage": "https://github.com/story-cms/adonis#readme",
  "peerDependencies": {
    "@adonisjs/auth": "^8.2.0",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.4.0",
    "@adonisjs/session": "^6.4.0"
  },
  "devDependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.4.0",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@adonisjs/session": "^6.4.0",
    "@adonisjs/sink": "^5.4.3",
    "@poppinss/dev-utils": "^2.0.3",
    "@types/node": "^20.3.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.43.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "mrm": "^4.1.14",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "typescript": "^5.1.3"
  },
  "mrmConfig": {
    "core": false,
    "license": "MIT",
    "services": [
      "github-actions"
    ],
    "minNodeVersion": "16.13.1",
    "probotApps": [],
    "runGhActionsOnWindows": false
  },
  "dependencies": {
    "copyfiles": "^2.4.1"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "htmlWhitespaceSensitivity": "css",
    "singleQuote": true,
    "printWidth": 90,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "proseWrap": "always"
        }
      }
    ],
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "standard-version": {
    "skip": {
      "commit": true,
      "tag": true
    },
    "types": [
      {
        "type": "feat",
        "section": "Added"
      },
      {
        "type": "fix",
        "section": "Fixed"
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      },
      {
        "type": "wip",
        "section": "WIP",
        "hidden": true
      }
    ]
  }
}